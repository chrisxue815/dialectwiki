<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="org.dw.model.Province" table="dw" catalog="dialectwiki">
	    <id name="province_id" type="java.lang.Integer">
            <column name="province_id" />
            <generator class="identity"></generator>
        </id>
        
        <property name="province_name" type="java.lang.String">
        	<column name="province_name" length="45"/>
        </property>
        
        <set name="cities" table="dw_city" cascade="save-update" inverse="true">
        	<key column="province_id"></key>
        	<one-to-many class="org.dw.model.City" />
        </set>
        
                
	</class>

</hibernate-mapping>    